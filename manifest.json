{
  "name": "Auto Color Article Extension",
  "description": "Add a color for each paragraph to ease readibility",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "auto_color_article_extension.png"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*", "https://*/*"
],
  "background": {
    "service_worker": "scripts/background.js"
  }
}
