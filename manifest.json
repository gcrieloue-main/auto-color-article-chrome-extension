{
  "name": "Auto Color Article Extension",
  "description": "Add a color for each paragraph to ease readibility",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "auto_color_article_extension.png",
    "default_title": "Colorize this article"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": ["https://*/*","https://*/*"],
  "background": {
    "service_worker": "scripts/background.js"
  }
}
